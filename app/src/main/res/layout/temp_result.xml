<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/frame">

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/tvWrong"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="30sp"
            android:textIsSelectable="true"
            android:gravity="center"
            android:text="@string/tvWrong_text"
            android:textColor="@android:color/holo_red_light"/>

        <ImageView android:id="@+id/imgCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tvWord"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="30sp"
            android:textIsSelectable="true"
            android:gravity="center"/>

        <TextView android:id="@+id/tvTranslation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textIsSelectable="true"
            android:gravity="center"/>

        <View android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@drawable/separator"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/tvFullTransl"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textIsSelectable="true"
            android:textSize="15sp"/>

    </LinearLayout>

    <Button android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/variant"
        android:textColor="@color/variant_color"
        android:text="@string/btnNext_text"
        android:layout_alignParentBottom="true"/>

    <View android:id="@+id/Separator2"
        android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="@drawable/separator"
        android:layout_above="@+id/btnNext"/>

</RelativeLayout>