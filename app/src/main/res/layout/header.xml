<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffd9d9d9">

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pbMain"/>

    <TextView android:id="@+id/tvUserNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/tvUserNum_text"
        android:layout_below="@+id/pbMain"/>

    <TextView android:id="@+id/tvWholeNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/tvWholeNum_text"
        android:layout_below="@+id/tvUserNum"/>

    <View android:layout_height="2px"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:background="#33000000"
        android:layout_below="@+id/tvWholeNum"/>

</RelativeLayout>